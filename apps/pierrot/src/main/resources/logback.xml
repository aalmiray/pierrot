<configuration>
    <!-- breaks GraalVM -->
    <appender name="FILE" class="ch.qos.logback.core.FileAppender">
        <file>pierrot.log</file>
        <append>true</append>
        <encoder>
            <pattern>%-4relative [%thread] %-5level %logger{35} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- info logs are displayed to the user -->
    <appender name="PROGRESS" class="ch.qos.logback.core.ConsoleAppender">
        <!-- encoders are assigned the type
             ch.qos.logback.classic.encoder.PatternLayoutEncoder by default -->
        <encoder>
            <pattern>%msg%nopex%n</pattern>
        </encoder>
    </appender>

    <logger name="com.agorapulse.pierrot" level="info">
        <appender-ref ref="PROGRESS"/>
    </logger>

    <root level="error">
        <appender-ref ref="FILE" />
    </root>
</configuration>
